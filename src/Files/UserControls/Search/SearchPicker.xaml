                    </ItemsControl.ItemsPanel>
                </ItemsControl>-->

                <CommandBar Grid.Row="3" IsOpen="False"
                        Margin="0,0,0,8" Background="Transparent" DefaultLabelPosition="Right" IsDynamicOverflowEnabled="False">
                    <AppBarButton x:Name="AddFilterButton" Icon="Add" Label="{helpers:ResourceString Name=Add}" Loaded="AddFilterButton_Loaded" />
                </CommandBar>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="STemplate" x:DataType="x:String">
            <TextBlock Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="TTemplate" x:DataType="vm:Test">
            <Button CornerRadius="4" Padding="4">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind Title}" />
                        <TextBlock Text="{x:Bind Value}" FontWeight="Bold" />
                        <Button Width="12" Padding="0" Opacity="0.60"
                                                Visibility="{x:Bind IsChecked}"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                            <Button.Content>
                                <FontIcon FontSize="10" Glyph="&#xE10A;" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Button.Content>
            </Button>
        </DataTemplate>


        <DataTemplate x:Key="DateRangePickerTemplate" x:DataType="vm:IDateRangePickerViewModel">
            <Grid Margin="0,8,0,0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="64" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    VerticalAlignment="Top"
                    Text="{helpers:ResourceString Name=NoDateRangeSelected}"
                    Style="{StaticResource IndicatorStyle}"
                    Visibility="{x:Bind IsEmpty, Mode=OneWay}" />
                <StackPanel Orientation="Vertical"
                        Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                    <TextBlock TextWrapping="Wrap" Text="{x:Bind Description, Mode=OneWay}" />
                    <TextBlock FontSize="13" FontWeight="Bold" TextWrapping="Wrap" Text="{x:Bind Label, Mode=OneWay}" />
                </StackPanel>
                <local:CalendarRangePicker Grid.Row="1" Range="{x:Bind Range, Mode=TwoWay}" />
                <TextBlock Grid.Row="2" Margin="0,8,0,-12"
                    Text="{helpers:ResourceString Name=OrChooseADateRange}"
                    Style="{StaticResource IndicatorStyle}" />
                <local:NamedDateRangePicker Grid.Row="3" Range="{x:Bind Range, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangePickerTemplate" x:DataType="vm:ISizeRangePickerViewModel">
            <Grid Margin="0,8,0,0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="64" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    VerticalAlignment="Top"
                    Text="{helpers:ResourceString Name=NoSizeRangeSelected}"
                    Style="{StaticResource IndicatorStyle}"
                    Visibility="{x:Bind IsEmpty, Mode=OneWay}" />
                <StackPanel Orientation="Vertical"
                        Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                    <TextBlock Text="{x:Bind Description}" TextWrapping="Wrap" />
                    <TextBlock FontSize="13" FontWeight="Bold" TextWrapping="Wrap" Text="{x:Bind Label, Mode=OneWay}" />
                </StackPanel>
                <local:SizeRangeSlider Grid.Row="1" HorizontalAlignment="Stretch" Range="{x:Bind Range, Mode=TwoWay}" />
                <TextBlock Grid.Row="3" Margin="0,8,0,-12"
                    Text="{helpers:ResourceString Name=OrChooseASizeRange}"
                    Style="{StaticResource IndicatorStyle}" />
                <local:NamedSizeRangePicker Grid.Row="4" Range="{x:Bind Range, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>

        <ControlTemplate
            x:Key="HeaderItemTemplate"
            x:Name="HeaderItemTemplate"
            TargetType="MenuFlyoutItem">
            <Button
                MaxWidth="240"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{TemplateBinding Command}"
                CommandParameter="{TemplateBinding CommandParameter}"
                Content="{TemplateBinding Tag}">
                <Button.ContentTemplate>
                    <DataTemplate x:DataType="vm:ISearchFilterHeader">
                        <StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <FontIcon
                                    HorizontalAlignment="Left"
                                    FontSize="18"
                                    Glyph="{x:Bind Glyph}" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Title}" />
                            </Grid>
                            <TextBlock
                                FontSize="14"
                                Text="{x:Bind Description}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </ControlTemplate>

        <Style x:Key="IndicatorStyle" BasedOn="{StaticResource CaptionTextBlockStyle}" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="17" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBackgroundBrush}" />
            <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                            Background="{TemplateBinding Background}"
                            BackgroundSizing="{TemplateBinding BackgroundSizing}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            ContentTransitions="{TemplateBinding ContentTransitions}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            AutomationProperties.AccessibilityView="Raw">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </ContentPresenter>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <ContentControl
        HorizontalContentAlignment="Stretch"
        Content="{x:Bind ViewModel, Mode=OneWay}"
        ContentTemplateSelector="{StaticResource PickerTemplateSelector}" />

</UserControl>
