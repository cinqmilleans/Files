<UserControl
    x:Class="Files.UserControls.Search.Picker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Files.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:helpers="using:Files.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Files.ViewModels.Search" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>

        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:VisiblityInvertConverter x:Key="VisiblityInvertConverter" />

        <local:ATemplateSelector x:Key="ATemplateSelector" STemplate="{StaticResource STemplate}" TTemplate="{StaticResource TTemplate}" />

        <local:PickerTemplateSelector
            x:Key="PickerTemplateSelector"
            DateRangeTemplate="{StaticResource DateRangePickerTemplate}"
            GroupTemplate="{StaticResource GroupPickerTemplate}"
            LocationTemplate="{StaticResource LocationPickerTemplate}"
            SizeRangeTemplate="{StaticResource SizeRangePickerTemplate}" />

        <DataTemplate x:Key="LocationPickerTemplate" x:DataType="vm:ILocationPickerViewModel">
            <CheckBox Grid.Row="1"
                Content="{helpers:ResourceString Name=IncludeSubfolders}"
                IsChecked="{x:Bind SearchInSubFolders, Mode=TwoWay}" />
        </DataTemplate>

        <DataTemplate x:Key="GroupPickerTemplate" x:DataType="vm:IGroupPickerViewModel">
            <Grid Margin="0,8,0,0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--<TextBlock VerticalAlignment="Top" Style="{StaticResource IndicatorStyle}" Visibility="{x:Bind IsEmpty, Mode=OneWay}"
                    Text="{helpers:ResourceString Name=NoFilterSelected}" />-->
                <Grid Visibility="{x:Bind HasDescription}">
                    <TextBlock Text="{x:Bind Description, Mode=OneWay}" TextWrapping="Wrap"
                        Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}" />
                </Grid>
                <StackPanel Grid.Row="1">
                <Grid Margin="0,4,0,4" Background="Transparent" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="18" />
                    </Grid.ColumnDefinitions>
                    <FontIcon Width="18" FontSize="18" VerticalAlignment="Center" Glyph="&#xE2B2;" />
                    <TextBlock Grid.Column="1" Text="Size" FontSize="15" FontWeight="SemiBold" />
                    <Button Grid.Column="2"
                                            Width="18" Margin="0" Padding="0" Background="Transparent" BorderBrush="Transparent">
                        <Button.Content>
                                <FontIcon Width="18" FontSize="18" Opacity="0.60" HorizontalAlignment="Right" Glyph="&#xE974;" />
                        </Button.Content>
                    </Button>
                </Grid>
                    <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Small" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Rectangle Height="1" Width="240" Fill="Gray" Margin="22,4,0,4" />

                    <Grid Margin="0,4,0,4" Background="Transparent" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="18" />
                    </Grid.ColumnDefinitions>
                    <FontIcon Width="18" FontSize="18" VerticalAlignment="Center" Glyph="&#xEC92;" />
                    <TextBlock Grid.Column="1" Text="Modification Date" FontSize="15" FontWeight="SemiBold" />
                    <Button Grid.Column="2"
                                            Width="18" Margin="0" Padding="0" Background="Transparent" BorderBrush="Transparent">
                        <Button.Content>
                            <FontIcon Width="18" FontSize="18" Opacity="0.60" HorizontalAlignment="Right" Glyph="&#xE974;" />
                        </Button.Content>
                    </Button>
                </Grid>
                    <Grid Margin="0,4,0,4" Background="Transparent" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="18" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Width="18" FontSize="18" VerticalAlignment="Center" Glyph="&#xEC92;" />
                        <TextBlock Grid.Column="1" Text="Kind" FontSize="15" FontWeight="SemiBold" />
                        <Button Grid.Column="2"
                                            Width="18" Margin="0" Padding="0" Background="Transparent" BorderBrush="Transparent">
                            <Button.Content>
                                <FontIcon Width="18" FontSize="18" Opacity="0.60" HorizontalAlignment="Right" Glyph="&#xE974;" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xEA90;" />
                                <TextBlock Text="PDF" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE8A5;" />
                                <TextBlock Text="Word" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Rectangle Height="1" Width="240" Fill="Gray" Margin="22,4,0,4" />
                    <Grid Margin="0,4,0,4" Background="Transparent" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="18" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Width="18" FontSize="18" VerticalAlignment="Center" Glyph="&#xEC92;" />
                        <TextBlock Grid.Column="1" Text="Creation Date" FontSize="15" FontWeight="SemiBold" />
                        <Button Grid.Column="2"
                                            Width="18" Margin="0" Padding="0" Background="Transparent" BorderBrush="Transparent">
                            <Button.Content>
                                <FontIcon Width="18" FontSize="18" Opacity="0.60" HorizontalAlignment="Right" Glyph="&#xE974;" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="from" />
                                <TextBlock Text="01/08/2021" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="to" />
                                <TextBlock Text="01/14/2021" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Rectangle Height="1" Width="240" Fill="Gray" Margin="22,4,0,4" />
                    <Grid Margin="0,4,0,4" Background="Transparent" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="18" />
                    </Grid.ColumnDefinitions>
                        <FontIcon Width="18" FontSize="18" VerticalAlignment="Center" Glyph="&#xEC26;" />
                    <TextBlock Grid.Column="1" Text="Or" FontSize="15" FontWeight="SemiBold" />
                    <Button Grid.Column="2"
                                            Width="18" Margin="0" Padding="0" Background="Transparent" BorderBrush="Transparent">
                        <Button.Content>
                            <FontIcon Width="18" FontSize="18" Opacity="0.60" HorizontalAlignment="Right" Glyph="&#xE974;" />
                        </Button.Content>
                    </Button>
                </Grid>
                <StackPanel Margin="22,4,0,4" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Width="16" FontSize="16" Glyph="&#xE2B2;" />
                        <TextBlock Text="Size" FontSize="16" />
                    </StackPanel>
                        <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="from" />
                                    <TextBlock Text="Very Large" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                    <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                        <Button.Content>
                                            <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Width="14" FontSize="16" Glyph="&#xEC92;" />
                        <TextBlock Text="Access Date" FontSize="16" />
                     </StackPanel>
                        <Button CornerRadius="4" Padding="4" Margin="22,4,0,4" FontSize="12">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="before:" Visibility="Collapsed" />
                                    <TextBlock Text="Today" FontWeight="Bold" Foreground="{StaticResource SystemAccentColorLight2}" />
                                    <Button Width="12" Padding="0" Opacity="0.60"
                                        Background="Transparent" BorderBrush="Transparent"
                                        Style="{StaticResource FilterButtonStyle}">
                                        <Button.Content>
                                            <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </StackPanel>


