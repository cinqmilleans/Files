<UserControl
    x:Class="Files.UserControls.PaneControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:Files.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="400" d:DesignHeight="300" mc:Ignorable="d">

    <Grid x:Name="Root" x:Load="{x:Bind ViewModel.HasContent, Mode=OneWay}" Loading="Root_Loading">
        <ctrl:PreviewPane x:Name="PreviewPane" x:Uid="SelectedFilePreviewPane"
            HorizontalContentAlignment="Stretch" AutomationProperties.Name="Selected file preview pane"
            x:Load="{x:Bind ViewModel.HasPreview, Mode=OneWay}" />
    </Grid>

</UserControl>