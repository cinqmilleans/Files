<UserControl
    x:Class="Files.UserControls.Search.Picker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Files.ViewModels.Search"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:converters="using:Files.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="400" d:DesignHeight="300" mc:Ignorable="d">

    <UserControl.Resources>

        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:VisiblityInvertConverter x:Key="VisiblityInvertConverter" />

        <local:PickerTemplateSelector x:Key="PickerTemplateSelector"
            LocationTemplate="{StaticResource LocationPickerTemplate}"
            GroupTemplate="{StaticResource GroupPickerTemplate}"
            DateRangeTemplate="{StaticResource DateRangePickerTemplate}"
            SizeRangeTemplate="{StaticResource SizeRangePickerTemplate}" />

        <DataTemplate x:Key="LocationPickerTemplate" x:DataType="vm:ILocationPickerViewModel">
            <Grid RowSpacing="8" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Uid="SearchPickerLocation_In" FontSize="14" FontWeight="SemiBold" Text="Search in" />
                <CheckBox Grid.Row="1" x:Uid="SearchPickerLocation_Subfolders" Content="Subfolders" IsChecked="{x:Bind SearchInSubFolders, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GroupPickerTemplate" x:DataType="vm:IGroupPickerViewModel">
            <Grid RowSpacing="8" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Uid="SearchPickerGroup_NoSelected" TextWrapping="Wrap" Text="No filter selected." Visibility="{x:Bind IsEmpty, Mode=OneWay}" />
                <Grid Visibility="{x:Bind HasDescription}">
                    <TextBlock TextWrapping="Wrap" Text="{x:Bind Description, Mode=OneWay}"
                        Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}" />
                </Grid>
                <ItemsControl Grid.Row="1" ItemsSource="{x:Bind Contexts, Mode=OneWay}">
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ISearchFilterContext">
                            <Grid x:Name="ContextItem" Margin="0,4,0,4" ColumnSpacing="8" Background="Transparent"
                                PointerEntered="ContextItem_PointerEntered" PointerExited="ContextItem_PointerExited">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Width="16" FontSize="14" Glyph="{x:Bind Glyph}" VerticalAlignment="Center" />
                                <Button Grid.Column="1" CornerRadius="8" Command="{x:Bind OpenCommand}">
                                    <Button.Content>
                                        <TextBlock TextWrapping="Wrap">
                                            <Run Text="{x:Bind Label}" />
                                            <Run FontWeight="Light" Text="{x:Bind Parameter}" />
                                        </TextBlock>
                                    </Button.Content>
                                </Button>
                                <Button x:Name="CloseButton" Grid.Column="2" Visibility="Collapsed"
                                    Width="16" Padding="0" Background="Transparent" BorderBrush="Transparent"
                                    VerticalAlignment="Center" Command="{x:Bind ClearCommand}">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <CommandBar Grid.Row="2" Margin="0,0,0,8" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right" IsDynamicOverflowEnabled="False">
                    <AppBarButton x:Name="AddFilterButton" x:Uid="SearchPickerGroup_Add" Icon="Add" Label="Add" Loaded="AddFilterButton_Loaded" />
                    <AppBarButton
                        x:Uid="SearchPickerGroup_Clear" Icon="Clear" Label="Clear" Command="{x:Bind ClearCommand}"
                        IsEnabled="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}" />
                </CommandBar>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DateRangePickerTemplate" x:DataType="vm:IDateRangePickerViewModel">
            <Grid RowSpacing="8" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="64" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Uid="SearchPickerDateRange_NoSelected" TextWrapping="Wrap" Text="No date range selected." Visibility="{x:Bind IsEmpty, Mode=OneWay}" />
                <StackPanel Orientation="Vertical" Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                    <TextBlock TextWrapping="Wrap" Text="{x:Bind Description, Mode=OneWay}" />
                    <TextBlock FontSize="13" TextWrapping="Wrap" FontWeight="Bold" Text="{x:Bind Label, Mode=OneWay}" />
                </StackPanel>
                <CalendarDatePicker Grid.Row="1" Header="From" Date="{x:Bind MinOffset, Mode=TwoWay}" HorizontalAlignment="Stretch"  />
                <CalendarDatePicker Grid.Row="2" Header="To" Date="{x:Bind MaxOffset, Mode=TwoWay}" HorizontalAlignment="Stretch"  />
                <HyperlinkButton x:Uid="SearchPickerDateRange_Clear"
                    Grid.Row="3" HorizontalAlignment="Right"
                    Content="Clear" Command="{x:Bind ClearCommand, Mode=OneWay}" />
                <TextBlock x:Uid="SearchPickerDateRange_Choose" Grid.Row="4" TextWrapping="Wrap" Text="Or choose a date range" />
                <ItemsControl Grid.Row="5" ItemsSource="{x:Bind Links}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:IDateRangeLink">
                            <ToggleButton
                                Margin="0,8,0,0" FontSize="14" FontWeight="SemiBold"
                                HorizontalAlignment="Stretch" IsChecked="{x:Bind IsSelected, Mode=OneWay}"
                                Content="{x:Bind Label}" Command="{x:Bind ToggleCommand}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangePickerTemplate" x:DataType="vm:ISizeRangePickerViewModel">
            <Grid RowSpacing="8" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="64" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Uid="SearchPickerSizeRange_NoSelected" TextWrapping="Wrap" Text="No size range selected." Visibility="{x:Bind IsEmpty, Mode=OneWay}" />
                <StackPanel Orientation="Vertical" Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                    <TextBlock TextWrapping="Wrap" Text="{x:Bind Description}" />
                    <TextBlock FontSize="13" TextWrapping="Wrap" FontWeight="Bold" Text="{x:Bind Label, Mode=OneWay}" />
                </StackPanel>
                <local:SizeRangeSlider Grid.Row="1" Range="{x:Bind Range, Mode=TwoWay}" HorizontalAlignment="Stretch" />
                <HyperlinkButton x:Uid="SearchPickerSizeRange_Clear" Grid.Row="2"
                    HorizontalAlignment="Right" Content="Clear" Command="{x:Bind ClearCommand, Mode=OneWay}" />
                <TextBlock x:Uid="SearchPickerSizeRange_Choose" Grid.Row="3" TextWrapping="Wrap" Text="Or choose a size range" />
                <ItemsControl Grid.Row="4" ItemsSource="{x:Bind Links}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ISizeRangeLink">
                            <ToggleButton
                                Margin="0,8,0,0" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Stretch"
                                IsChecked="{x:Bind IsSelected, Mode=OneWay}" Command="{x:Bind ToggleCommand}">
                                <StackPanel HorizontalAlignment="Center" Spacing="12" Orientation="Horizontal">
                                    <TextBlock FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Text="{Binding NameLabel}" />
                                    <TextBlock Grid.Row="1" FontSize="12" VerticalAlignment="Center" Text="{Binding ValueLabel}" />
                                </StackPanel>
                            </ToggleButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DataTemplate>

        <ControlTemplate x:Name="HeaderItemTemplate" x:Key="HeaderItemTemplate" TargetType="MenuFlyoutItem">
            <Button
                Background="Transparent" BorderBrush="Transparent"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="{TemplateBinding Tag}"
                Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}">
                <Button.ContentTemplate>
                    <DataTemplate x:DataType="vm:ISearchFilterHeader">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <FontIcon FontSize="18" HorizontalAlignment="Left" Glyph="{x:Bind Glyph}" />
                                <TextBlock Grid.Column="1" FontSize="16" FontWeight="SemiBold" Text="{x:Bind Title}" />
                            </Grid>
                            <TextBlock FontSize="14" TextWrapping="Wrap" Text="{x:Bind Description}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </ControlTemplate>

    </UserControl.Resources>

    <ContentControl HorizontalContentAlignment="Stretch"
        Content="{x:Bind ViewModel, Mode=OneWay}" ContentTemplateSelector="{StaticResource PickerTemplateSelector}" />

</UserControl>
