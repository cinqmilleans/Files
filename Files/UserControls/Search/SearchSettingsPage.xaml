<Page
    x:Class="Files.UserControls.Search.SearchSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock x:Uid="SearchSettingOptions_Title" Margin="0,0,0,8" FontSize="18" FontWeight="SemiBold" Text="Search Options" />
        <local:Picker ViewModel="{x:Bind ViewModel.LocationViewModel}" />
        <local:Picker ViewModel="{x:Bind ViewModel.FilterViewModel}" />
    </StackPanel>
</Page>
