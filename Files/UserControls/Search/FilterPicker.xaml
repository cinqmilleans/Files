<UserControl
    x:Class="Files.UserControls.Search.FilterPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="using:System"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:search="using:Files.Filesystem.Search"
    xmlns:vm="using:Files.ViewModels.Search"
    xmlns:converters="using:Files.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="400" d:DesignHeight="300" mc:Ignorable="d">

    <UserControl.Resources>

        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:VisiblityInvertConverter x:Key="VisiblityInvertConverter" />

        <local:FilterPickerTemplateSelector x:Key="PickerTemplateSelector"
            CollectionTemplate="{StaticResource CollectionPickerTemplate}"
            KindTemplate="{StaticResource KindPickerTemplate}"
            DateRangeTemplate="{StaticResource DateRangePickerTemplate}"
            SizeRangeTemplate="{StaticResource SizeRangePickerTemplate}" />
        <local:FilterButtonTemplateSelector x:Key="ButtonTemplateSelector"
            DefaultTemplate="{StaticResource DefaultButtonTemplate}" />
        <local:FilterButtonContentTemplateSelector x:Key="ButtonContentTemplateSelector"
            CollectionTemplate="{StaticResource CollectionButtonContentTemplate}"
            DateRangeTemplate="{StaticResource DateRangeButtonContentTemplate}"
            SizeRangeTemplate="{StaticResource SizeRangeButtonContentTemplate}" />

        <DataTemplate x:Key="CollectionPickerTemplate" x:DataType="vm:IFilterCollectionViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <TextBlock Text="No filter selected. Add a new filter." TextWrapping="Wrap" Visibility="{x:Bind Filter.IsEmpty}" />
                <ItemsControl
                    ItemsSource="{x:Bind ItemViewModels, Mode=OneWay}" Margin="0,8,0,8"

                    ItemTemplateSelector="{StaticResource ButtonTemplateSelector}">
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0,2,0,2" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:IFilterViewModel">
                            <Grid Background="Transparent" PointerEntered="Grid_PointerEntered" PointerExited="Grid_PointerExited">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="32" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Width="32" FontSize="14" Glyph="{x:Bind Filter.Glyph}" />
                                <ContentControl Grid.Column="1" Content="{Binding}" ContentTemplateSelector="{StaticResource ButtonTemplateSelector}" />
                                <Button Width="32" x:Name="CloseButton" Click="CloseButton_Click"
                                        Grid.Column="2" Visibility="Collapsed" Background="Transparent" BorderBrush="Transparent">
                                    <Button.Content>
                                        <FontIcon FontSize="10" Glyph="&#xE10A;" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <CommandBar Margin="0,0,0,8" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right" IsDynamicOverflowEnabled="False">
                    <AppBarButton x:Name="AddFilterButton"
                        Icon="Add" Label="Add" Loaded="AddFilterButton_Loaded" />
                    <AppBarButton
                        Icon="Clear" Label="Clear" Command="{x:Bind ClearCommand}"
                        IsEnabled="{x:Bind Filter.IsEmpty, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}" />
                </CommandBar>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="KindPickerTemplate" x:DataType="vm:IKindViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <Grid Width="200" RowSpacing="4" ColumnSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xED25;" />
                                <TextBlock Text="Folder" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE8A5;" />
                                <TextBlock Text="Document" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE714;" />
                                <TextBlock Text="Video" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xEC4F;" />
                                <TextBlock Text="Music" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE8A5;" />
                                <TextBlock Text="Program" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE8A5;" />
                                <TextBlock Text="Other" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DateRangePickerTemplate" x:DataType="vm:IDateRangeFilterViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <StackPanel MinHeight="64">
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind Filter.IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                        <TextBlock Margin="8,8,0,0" TextWrapping="Wrap" Text="{x:Bind Filter.Label}" />
                        <TextBlock
                            Margin="8,0,0,0" FontSize="13" TextWrapping="Wrap" FontWeight="Bold"
                            Text="{x:Bind FullRangeLabel, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind Filter.IsEmpty, Mode=OneWay}">
                        <TextBlock Margin="8,8,0,0" TextWrapping="Wrap" Text="No file size range selected" />
                    </StackPanel>
                </StackPanel>
                <CalendarDatePicker Header="From" Date="{x:Bind MinDateTime, Mode=TwoWay}" HorizontalAlignment="Stretch"  />
                <CalendarDatePicker Header="To" Date="{x:Bind MaxDateTime, Mode=TwoWay}" HorizontalAlignment="Stretch"  />
                <HyperlinkButton x:Name="ClearButton" HorizontalAlignment="Right" Content="Clear" Command="{x:Bind ClearCommand, Mode=OneWay}" />
                <TextBlock Text="Or choose a file date range" Margin="0,16,0,0" />
                <ItemsControl ItemsSource="{x:Bind Links}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:IDateRangeLink">
                            <ToggleButton
                                Margin="0,8,0,0" HorizontalAlignment="Stretch"
                                FontSize="14" FontWeight="SemiBold"
                                IsChecked="{x:Bind IsSelected, Mode=OneWay}" Command="{x:Bind ToggleCommand}"
                                Content="{x:Bind Label}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangePickerTemplate" x:DataType="vm:ISizeRangeFilterViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <StackPanel MinHeight="64">
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind Filter.IsEmpty, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                        <TextBlock Margin="8,8,0,0"  TextWrapping="Wrap" Text="Only files whose size is" />
                        <TextBlock
                            Margin="8,0,0,0" FontSize="13" TextWrapping="Wrap" FontWeight="Bold"
                            Text="{x:Bind FullRangeLabel, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind Filter.IsEmpty, Mode=OneWay}">
                        <TextBlock Margin="8,8,0,0" TextWrapping="Wrap" Text="No file size range selected" />
                    </StackPanel>
                </StackPanel>
                <local:SizeRangeSlider Range="{x:Bind Filter.Range, Mode=TwoWay}" />
                <HyperlinkButton x:Name="ClearButton" HorizontalAlignment="Right" Content="Clear" Command="{x:Bind ClearCommand, Mode=OneWay}" />
                <TextBlock Text="Or choose a file size range" Margin="0,16,0,0" />
                <ItemsControl ItemsSource="{x:Bind Links}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ISizeRangeLink">
                            <ToggleButton
                                Margin="0,8,0,0" HorizontalAlignment="Stretch"
                                IsChecked="{x:Bind IsSelected,Mode=OneWay}" Command="{x:Bind ToggleCommand}"
                                Content="{Binding}" ContentTemplate="{StaticResource SizeRangeLinkTemplate}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangeLinkTemplate" x:DataType="vm:ISizeRangeLink">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock
                    FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"
                    Text="{Binding NameLabel}" />
                <TextBlock
                    Grid.Row="1" FontSize="12" VerticalAlignment="Center"
                    Text="{Binding ValueLabel}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DefaultButtonTemplate" x:DataType="vm:IFilterViewModel">
            <Button
                x:Name="OpenButton" CornerRadius="8" Click="OpenButton_Click"
                Content="{Binding}" ContentTemplateSelector="{StaticResource ButtonContentTemplateSelector}" />
        </DataTemplate>

        <DataTemplate x:Key="CollectionButtonContentTemplate">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <!--<TextBlock
                    FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"
                    Text="{x:Bind Label, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="1" FontSize="12" VerticalAlignment="Center"
                    Text="{x:Bind Count}" />-->
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DateRangeButtonContentTemplate" x:DataType="vm:IDateRangeFilterViewModel">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock
                    Grid.Row="1" FontSize="12" VerticalAlignment="Center"
                    Text="{x:Bind ShortRangeLabel}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangeButtonContentTemplate" x:DataType="vm:ISizeRangeFilterViewModel">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock
                    FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"
                    Text="{Binding ShortRangeLabel}" />
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <ContentControl
        x:Name="MainControl" Width="200"
        Content="{x:Bind ViewModel, Mode=OneWay}"
        ContentTemplateSelector="{StaticResource PickerTemplateSelector}" />

</UserControl>
