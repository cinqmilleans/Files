<Page
    x:Class="Files.UserControls.Search.SettingSearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:vm="using:Files.ViewModels.Search"
    xmlns:converters="using:Files.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:search="using:Files.Filesystem.Search"
    mc:Ignorable="d">

    <Page.Resources>

        <converters:ToStringConverter x:Key="ToStringConverter" />
        <converters:VisiblityInvertConverter x:Key="VisiblityInvertConverter" />

        <local:SettingSearchPageTemplateSelector x:Key="SettingTemplateSelector"
            DateRangeTemplate="{StaticResource DateRangeTemplate}"
            SizeRangeTemplate="{StaticResource SizeRangeTemplate}" />

        <DataTemplate x:Key="DateRangeTemplate" x:DataType="vm:IDateRangePageViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <Button Content="{Binding Mode=OneWay}" Command="{x:Bind BackCommand}" Style="{StaticResource SettingTitleButtonStyle}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SizeRangeTemplate" x:DataType="vm:ISizeRangePageViewModel">
            <StackPanel Orientation="Vertical" Width="200">
                <Button Content="{Binding Mode=OneWay}" Command="{x:Bind BackCommand}" Style="{StaticResource SettingTitleButtonStyle}" />
                <StackPanel MinHeight="64">
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind HasValue, Mode=OneWay}">
                        <TextBlock Margin="8,8,0,0"  TextWrapping="Wrap" Text="Only files whose size is" />
                        <TextBlock
                            Margin="8,0,0,0" FontSize="13" TextWrapping="Wrap" FontWeight="Bold"
                            Text="{x:Bind Range, Mode=OneWay, Converter={StaticResource ToStringConverter}, ConverterParameter='\{0:N}'}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="8,0,8,16" Visibility="{x:Bind HasValue, Mode=OneWay, Converter={StaticResource VisiblityInvertConverter}}">
                        <TextBlock Margin="8,8,0,0" TextWrapping="Wrap" Text="No file size range selected" />
                    </StackPanel>
                </StackPanel>
                <local:SizeRangeSlider Range="{x:Bind Range, Mode=TwoWay}" />
                <TextBlock Text="Or choose a file size range" Margin="0,32,0,0" />
                <ItemsControl ItemsSource="{x:Bind Links}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ISizeRangeLink">
                            <ToggleButton
                                Margin="0,8,0,0" HorizontalAlignment="Stretch"
                                IsChecked="{x:Bind IsSelected, Mode=OneWay}" Command="{x:Bind ToggleCommand}"
                                Content="{x:Bind Range}" ContentTemplate="{StaticResource SizeRangeLinkTemplate}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <HyperlinkButton Grid.Column="1" HorizontalAlignment="Right" Content="Clear" Command="{x:Bind ClearCommand}" />
                </Grid>
            </StackPanel>
        </DataTemplate>

        <Style x:Key="SettingTitleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate x:DataType="vm:ISettingSearchPageViewModel">
                        <StackPanel Orientation="Vertical">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="32" />
                                </Grid.ColumnDefinitions>
                                <FontIcon FontSize="18" HorizontalAlignment="Left" Glyph="{x:Bind Glyph}" />
                                <TextBlock Grid.Column="1" FontSize="16" FontWeight="SemiBold" Text="{x:Bind Title}" />
                                <FontIcon Grid.Column="2" FontSize="18" HorizontalAlignment="Right" Glyph="&#xE973;" />
                            </Grid>
                            <Rectangle Height="1" Margin="0,0,0,8" HorizontalAlignment="Stretch" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="SizeRangeLinkTemplate" x:DataType="search:ISizeRange">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
                <TextBlock
                    FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"
                    Text="{Binding Converter={StaticResource ToStringConverter}, ConverterParameter='\{0:n}'}" />
                <TextBlock
                    Grid.Row="1" FontSize="12" VerticalAlignment="Center"
                    Text="{Binding Converter={StaticResource ToStringConverter}, ConverterParameter='\{0:r}'}" />
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <ContentControl
        Content="{x:Bind ViewModel, Mode=OneWay}" Width="200"
        ContentTemplateSelector="{StaticResource SettingTemplateSelector}" />

</Page>
