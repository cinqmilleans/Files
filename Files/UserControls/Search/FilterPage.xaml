<Page
    x:Class="Files.UserControls.Search.FilterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Files.UserControls.Search"
    xmlns:converters="using:Files.Converters"
    xmlns:helpers="using:Files.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Page.Resources>

    <StackPanel x:Name="RootPanel" Orientation="Vertical" VerticalAlignment="Stretch">
        <Grid Height="34">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"
                Command="{x:Bind ViewModel.Navigator.BackCommand}">
                <Button.Content>
                    <FontIcon FontSize="16" FontWeight="SemiBold" Glyph="&#xE72B;" />
                </Button.Content>
            </Button>
            <TextBlock Grid.Column="1" Margin="12,0,0,0" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Text="{x:Bind ViewModel.Header.Title}" />
        </Grid>
        <local:Picker HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ViewModel="{x:Bind ViewModel.Picker, Mode=OneWay}" />
        <Grid Margin="0,24,0,0" HorizontalAlignment="Stretch" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="SearchButton"
                HorizontalAlignment="Stretch" Content="{helpers:ResourceString Name=SearchMenu_Search}" Command="{x:Bind ViewModel.Navigator.SearchCommand}" />
            <Button x:Name="ClearButton" Grid.Column="1"
                HorizontalAlignment="Stretch" Content="{helpers:ResourceString Name=SearchMenu_Clear}" Command="{x:Bind ViewModel.Picker.ClearCommand}"
                IsEnabled="{x:Bind ViewModel.Picker.IsEmpty, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}" />
        </Grid>
    </StackPanel>

</Page>
